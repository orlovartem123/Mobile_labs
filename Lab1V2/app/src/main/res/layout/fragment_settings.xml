<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentSettings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonLoad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="LOAD FROM JSON"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonSettingsBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="back"
            app:layout_constraintEnd_toEndOf="@+id/buttonLoad"
            app:layout_constraintStart_toStartOf="@+id/buttonLoad"
            app:layout_constraintTop_toBottomOf="@+id/buttonLoad" />

        <Switch
            android:id="@+id/switchDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Use DB"
            app:layout_constraintBottom_toTopOf="@+id/buttonLoad"
            app:layout_constraintEnd_toEndOf="@+id/buttonLoad"
            app:layout_constraintStart_toStartOf="@+id/buttonLoad" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>